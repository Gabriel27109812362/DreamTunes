<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>


            <gradient

                android:startColor="@color/colorMainDarker"
                android:centerColor="@color/colorMainDarker"
                android:endColor="@color/colorMainDarker"
                />


        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/colorMain"
                    android:centerColor="@color/colorMain"
                    android:endColor="@color/colorMain"
                    />
            </shape>
        </clip>
    </item>

</layer-list>