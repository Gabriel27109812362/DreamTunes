<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPlayer">


    <ImageView
        android:id="@+id/title_small"
        android:layout_width="282dp"
        android:layout_height="67dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_title_small" />


    <Button
        android:id="@+id/your_playlists_button"
        android:layout_width="128dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_your_playlist"
        app:layout_constraintEnd_toStartOf="@+id/your_account_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/all_songs_button"
        app:layout_constraintTop_toBottomOf="@+id/title_small" />

    <Button
        android:id="@+id/your_account_button"
        android:layout_width="128dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/ic_your_acount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_small" />

    <Button
        android:id="@+id/all_songs_button"
        android:layout_width="128dp"
        android:layout_height="55dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_all_songs_clicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_small" />




            <Button
                android:id="@+id/shuffle_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_shuffle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_songs_button" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/random"
                android:textColor="@color/colorMain"
                app:layout_constraintStart_toEndOf="@+id/shuffle_button"
                app:layout_constraintTop_toBottomOf="@+id/all_songs_button" />

            <Button
                android:id="@+id/sort"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ic_sort"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/your_account_button" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintBottom_toTopOf="@+id/progress_bar_player"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/border_line" />

            <ImageView
                android:id="@+id/border_line"
                android:layout_height="2dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shuffle_button"
                app:srcCompat="@drawable/recycle_view_style" />



            <ProgressBar
                android:id="@+id/progress_bar_player"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="3dp"


                android:layout_marginBottom="65dp"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_player"
                app:srcCompat="@drawable/ic_default_vinyl" />




</androidx.constraintlayout.widget.ConstraintLayout>