<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">


    <ImageView
        android:id="@+id/title_start_second"
        android:layout_width="317dp"
        android:layout_height="74dp"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_main_title" />


    <EditText
        android:id="@+id/email_sign_in_input"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/input_text"
        android:textColor="@color/colorMain"
        android:textColorHint="@color/colorMainMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_start_second"
        tools:layout_conversion_absoluteHeight="32dp"
        tools:layout_conversion_absoluteWidth="323dp" />

    <CheckBox
        android:id="@+id/remember_me_check_box"
        android:layout_width="149dp"
        android:layout_height="32dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="217dp"
        android:buttonTint="@color/colorMain"
        android:fontFamily="@font/open_sans"
        android:text="@string/remember"
        android:textColor="@color/colorMain"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_sign_in_input" />



    <Button
        android:id="@+id/sign_up_with_fb_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="186dp"
        android:background="@drawable/ic_facebook_ico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or_sign_up_fb_text" />

    <com.facebook.login.widget.LoginButton
        android:visibility="invisible"
        android:id="@+id/sign_up_with_fb_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="186dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or_sign_up_fb_text" />



    <TextView
        android:id="@+id/or_sign_up_fb_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="123dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/sign_up_fb"
        android:textColor="@color/colorMain"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_sign_in" />



    <EditText
        android:id="@+id/password_sign_in_input"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:textAppearance="@style/input_text"
        android:textColor="@color/colorMain"
        android:textColorHint="@color/colorMainMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/validator_email_sign_in"
        tools:layout_conversion_absoluteHeight="32dp"
        tools:layout_conversion_absoluteWidth="323dp" />

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="142dp"
        android:layout_height="37dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="135dp"
        android:background="@drawable/ic_sign_in_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remember_me_check_box" />

    <TextView
        android:id="@+id/dont_have_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/dont_have_acccount"
        android:textColor="@color/colorMain"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_with_fb_view" />

    <Button
        android:id="@+id/sign_up_link"
        android:layout_width="202dp"
        android:layout_height="18dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="105dp"
        android:background="@drawable/ic_sign_up_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dont_have_account_text" />

    <TextView
        android:id="@+id/validator_email_sign_in"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:textColor="@color/colorMain"
        android:fontFamily="@font/open_sans"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_sign_in_input" />

    <TextView
        android:id="@+id/validator_password_sign_in"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/colorMain"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_sign_in_input" />


</androidx.constraintlayout.widget.ConstraintLayout>